<Window x:Class="_1Ejercicio.PacMan"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:_1Ejercicio"
        mc:Ignorable="d"
        Title="PacMan" Height="450" Width="800">
    <Canvas>
        <Path Stroke="Black" StrokeThickness="3" Canvas.Left="100" Canvas.Top="100" Fill="Gold" Data="M130,20 A70,70 0 1 0, 130,100 L130,100 70,65Z"></Path>
        <Ellipse Fill="White" Canvas.Left="155" Canvas.Top="105" Stroke="Black" StrokeThickness="2" Width="35" Height="35"></Ellipse>
        <Ellipse Fill="Black" Canvas.Left="161" Canvas.Top="111" Stroke="Black" StrokeThickness="2" Width="24" Height="24"></Ellipse>
        <Ellipse Fill="White" Canvas.Left="160" Canvas.Top="114"  StrokeThickness="2" Width="8" Height="8"></Ellipse>
    </Canvas>
</Window>
