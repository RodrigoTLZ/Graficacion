<Window x:Class="Unidad2.Ojo"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unidad2"
        mc:Ignorable="d"
        Title="Ojo" Height="450" Width="800">
    <Canvas>
        <Ellipse Width="350" Height="350" Fill="LightGray" Canvas.Left="250" Canvas.Top="40"></Ellipse>
        <Ellipse Width="200" Height="200" Canvas.Left="325" Canvas.Top="115">
            <Ellipse.Fill>
                <RadialGradientBrush Center="0.5,0.5" RadiusX="0.5" RadiusY="0.5" GradientOrigin="0.5,0.5">
                    <GradientStop Color="Black" Offset="0.30"></GradientStop>
                    <GradientStop Color="LightBlue" Offset="0.50"></GradientStop>
                    <GradientStop Color="Blue" Offset="1"></GradientStop>
                </RadialGradientBrush>
            </Ellipse.Fill>
        </Ellipse>
        <Ellipse Width="40" Height="40" Fill="White" Canvas.Left="370" Canvas.Top="170"></Ellipse>
    </Canvas>
</Window>
