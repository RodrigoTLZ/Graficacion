<Window x:Class="Unidad2.ImageBrushWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Unidad2"
        mc:Ignorable="d"
        Title="ImageBrushWindow" Height="450" Width="800">
    <Grid>
        <Grid.Background>
            <ImageBrush Viewbox="0,0 0.5 0.5" Viewport="0,0 0.5 0.5" TileMode="FlipXY" ImageSource="https://www.nicepng.com/png/detail/320-3205108_cleaning-kirby-star-allies-power.png"></ImageBrush>
        </Grid.Background>
    </Grid>
</Window>
